<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.SysAiMapper">

	<resultMap type="com.ruoyi.system.api.domain.SysUserAi" id="SysAiResult">
		<id     property="userId"     column="user_id"     />
		<result property="count"   column="count"   />
		<result property="type"  column="type"   />
		<result property="userName"   column="user_name"   />
		<result property="createBy"   column="create_by"   />
		<result property="createTime" column="create_time" />
		<result property="updateBy"   column="update_by"   />
		<result property="updateTime" column="update_time" />
	</resultMap>
	
	<sql id="selectAiVo">
        select d.dept_id, d.user_name, d.count, d.type, d.create_by, d.create_time
        from sys_ai d
    </sql>
    
    <select id="selectAiByUserId" parameterType="Long" resultMap="SysAiResult">
		<include refid="selectAiVo"/>
		where user_id = #{userId}
	</select>

</mapper> 