<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.seektop.fund.mapper.RechargePayerMonitorUsernameWhiteListMapper">

    <resultMap id="BaseResultMap" type="com.seektop.fund.model.RechargePayerMonitorUsernameWhiteList">
        <id column="user_id" jdbcType="INTEGER" property="userId"/>
        <result column="create_date" jdbcType="TIMESTAMP" property="createDate"/>
        <result column="creator" jdbcType="VARCHAR" property="creator"/>
    </resultMap>

    <resultMap id="listResultMap" type="com.seektop.fund.vo.RechargePayerMonitorUsernameWhiteListDO">
        <id column="user_id" jdbcType="INTEGER" property="userId"/>
        <result column="username" jdbcType="VARCHAR" property="username"/>
        <result column="create_date" jdbcType="TIMESTAMP" property="createDate"/>
        <result column="register_date" jdbcType="TIMESTAMP" property="registerDate"/>
        <result column="creator" jdbcType="VARCHAR" property="creator"/>
    </resultMap>

    <select id="findWhiteList" resultMap="listResultMap">
        select u.id as user_id, u.username, u.register_date, grpmuw.create_date, grpmuw.creator
        from gl_recharge_payer_monitor_username_whitelist grpmuw
        left join gl_user u on u.id = grpmuw.user_id
        where 1 = 1
        <if test="startDate != null and endDate != null">
            and grpmuw.create_date between #{startDate} and #{endDate}
        </if>
        <if test="username != null and username != ''">
            and u.username = #{username}
        </if>
        order by grpmuw.create_date desc
    </select>

</mapper>
